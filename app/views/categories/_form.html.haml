= simple_form_for category, html: { class: "form-horizontal" } do |f|
  = f.input :name
  = f.association :category_type, collection: ->{ CategoryType.all.map { |type| [CategoryType.human_attribute_name(type.name), type.id] } }
  = f.input :inactive, wrapper: :inline_checkbox
  .form-actions
    = f.button :submit, class: "btn btn-primary", id: :category_submit
    = link_to t("common.back"), categories_path, class: "btn"
