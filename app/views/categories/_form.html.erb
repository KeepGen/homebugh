<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= t( 'activerecord.errors.template.header', :count => @category.errors.count ) %>:</h2>
      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :type_id %><br />
    <select name="type_id">
    <% Type.all.each do |type| %>
        <option value="<%=type.id%>"><%=I18n.translate( 'parts.categories.' + type.name )%></option>
    <% end %>
    </select>

  </div>
  <div class="actions">
    <%= f.submit %>
    <%= link_to t( 'common.back' ), categories_path %>
  </div>
<% end %>
