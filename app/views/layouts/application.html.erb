<!DOCTYPE html>
<html>
<head>
  <title>Homebugh</title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div class="notice"><%= notice %></div>
<div class="alert"><%= alert %></div>

<div id="user_nav">
    <% if user_signed_in? %>
        <%= t("parts.auth.signed_in_as") %> <%= current_user.email %>
        <%= link_to t("parts.auth.sign_out"), destroy_user_session_path %>
    <% else %>
        <%= link_to t("parts.auth.sign_up"), new_user_registration_path %> <%= t("common.or") %>
        <%= link_to t("parts.auth.sign_in"), new_user_session_path %>
    <% end %>
</div>

<div><h1>HomeBugh</h1></div>

<% if current_user %>
    <ul class="main-menu">
        <li><%= link_to t('main_menu.transactions'), transactions_path %></li>
        <li><%= link_to t('main_menu.categories'), categories_path %></li>
        <li><%= link_to t('main_menu.accounts'), accounts_path %></li>
        <li><%= link_to t('main_menu.cash_flows'), cash_flows_path %></li>
    </ul>

    <% #accounts_recalculate %>
    <% unless @accounts.empty? %>
        <% @accounts.each do |account| %>
        <div><%= account.name %>: <%= get_number_to_currency get_account_funds( account.id ) %></div>
        <% end %>
        <div><%= t( 'common.total_funds' ) %>: <%= get_number_to_currency get_total_funds %></div>
    <% end %>
<% end %>

<%= yield %>

</body>
</html>
