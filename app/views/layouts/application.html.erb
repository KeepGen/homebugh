<!DOCTYPE html>
<html>
<head>
  <title>HomeBugh</title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
    <% if flash[:notice] || flash[:alert] %>
        <div id=notify-container>
        <% if flash[:notice] %>
            <div class="notice"><%= notice %></div>
        <% elsif flash[:alert] %>
            <div class="alert"><%= alert %></div>
        <% end %>
        </div>
    <% end %>

    <div id=container>
        <div id=header>
            <div id=header_content>
                <a href="/" id=site_logo>
                    <span>HomeBugh</span>
                </a>
                <ul id=account_box>
                    <% if user_signed_in?%>
                        <li <%='class=selected' if @controller_name == 'transactions' %>>
                            <%= link_to transactions_path do %><span><%= t('main_menu.transactions') %></span><% end %></li>
                        <li <%='class=selected' if @controller_name == 'categories' %>>
                            <%= link_to categories_path do %><span><%= t('main_menu.categories') %></span><% end %></li>
                        <li <%='class=selected' if @controller_name == 'accounts'%>>
                            <%= link_to accounts_path do %><span><%= t('main_menu.accounts') %></span><% end %></li>
                        <li <%='class=selected' if @controller_name == 'cash_flows'%>>
                            <%= link_to cash_flows_path do %><span><%= t('main_menu.cash_flows') %></span><% end %></li>
                        <li><%= link_to t("parts.auth.sign_out"), destroy_user_session_path %></li>
                    <% else %>
                        <li><%= link_to t("parts.auth.sign_up"), new_user_registration_path %></li>
                        <li><%= link_to t("parts.auth.sign_in"), new_user_session_path %></li>
                    <% end %>
                </ul>
            </div>
        </div>
        <div id=main>
            <% if current_user %>
                <div id=page_header>
                <% @accounts = Account.where( :user_id => current_user.id ) %>
                <% unless @accounts.empty? %>
                    <% @accounts.each do |account| %>
                    <div><%= account.name %>: <%= get_number_to_currency get_account_funds( account.id ) %></div>
                    <% end %>
                    <div><%= t( 'common.total_funds' ) %>: <%= get_number_to_currency get_total_funds %></div>
                <% end %>
                </div>
            <% end %>

            <div id=page_content>
                <%= yield %>
            </div>
        </div>
        <div id=footer>
            <div id=footer_content>
                <ul id=nav_bottom>
                    <li>
                        <a href="#">About</a>
                        <p>Comming soon</p>
                    </li>
                    <li>
                        <a href="#">Feedback</a>
                        <p>Comming soon</p>
                    </li>
                    <li>
                        <a href="#">FAQ</a>
                        <p>Comming soon</p>
                    </li>
                </ul>
                <p class=copyright>
                    copyright @2011
                </p>
                <ul class=site_links>
                    <% if user_signed_in? %>
                        <li><%= link_to transactions_path do %><span><%= t('main_menu.transactions') %></span><% end %></li>
                        <li><%= link_to categories_path do %><span><%= t('main_menu.categories') %></span><% end %></li>
                        <li><%= link_to accounts_path do %><span><%= t('main_menu.accounts') %></span><% end %></li>
                        <li><%= link_to cash_flows_path do %><span><%= t('main_menu.cash_flows') %></span><% end %></li>
                        <li><%= link_to t("parts.auth.sign_out"), destroy_user_session_path %></li>
                    <% else %>
                        <li><%= link_to t("parts.auth.sign_up"), new_user_registration_path %></li>
                        <li><%= link_to t("parts.auth.sign_in"), new_user_session_path %></li>
                    <% end %>
                </ul>
            </div>
        </div>

    </div>
</body>
</html>
