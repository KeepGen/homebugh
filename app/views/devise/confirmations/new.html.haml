.col-md-5.col-md-offset-3
  = simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name)) do |f|
    %h2= t(:resend_confirmation_instructions)
    .form-group{class: ('has-error has-feedback' if resource.errors[:email].present?)}
      .col-lg-12
        = f.input_field :email, autofocus: true, placeholder: t(:email)
        = f.error :email
    = f.button :submit, t(:resend_confirmation_instructions), class: "pull-left btn btn-primary btn-block"
  .clearfix
  = render "devise/shared/links"
