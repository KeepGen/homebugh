.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path} HomeBugh
    .navbar-collapse.collapse
      - if user_signed_in?
        %ul.nav.navbar-nav
          %li{class: ("active" if controller_name == 'transactions')}= link_to t("main_menu.transactions"), transactions_path
          %li{class: ("active" if controller_name == 'categories')}= link_to t("main_menu.categories"), categories_path
          %li{class: ("active" if controller_name == 'accounts')}= link_to t("main_menu.accounts"), accounts_path
          %li{class: ("active" if controller_name == 'cash_flows')}= link_to t("main_menu.cash_flows"), cash_flows_path
          %li{class: ("active" if controller_name == 'statistics')}= link_to t("main_menu.statistics"), statistics_path
          %li{class: ("active" if controller_name == 'recurring_payments')}= link_to t("main_menu.recurring_payments"), recurring_payments_path
          %li{class: ("active" if controller_name == 'budgets')}= link_to t("main_menu.budgets"), budgets_path
        %ul.nav.navbar-nav.navbar-right
          %li= link_to image_tag("flags/#{inverse_locale}.png"), url_for(locale: inverse_locale)
          %li.divider-vertical
          %li= link_to t("parts.auth.sign_out"), destroy_user_session_path, method: :delete
      - else
        %ul.nav.navbar-nav.navbar-right
          %li= link_to image_tag("flags/#{inverse_locale}.png"), url_for(locale: inverse_locale)
          %li.divider-vertical
          %li= link_to t("parts.auth.sign_in"), new_user_session_path
          %li= link_to t("parts.auth.sign_up"), new_user_registration_path
