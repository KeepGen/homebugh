.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path} HomeBugh
    .navbar-collapse.collapse
      - if user_signed_in?
        %ul.nav.navbar-nav
          %li{class: ("active" if current_page?(transactions_path))}= link_to t("main_menu.transactions"), transactions_path
          %li{class: ("active" if current_page?(categories_path))}= link_to t("main_menu.categories"), categories_path
          %li{class: ("active" if current_page?(accounts_path))}= link_to t("main_menu.accounts"), accounts_path
          %li{class: ("active" if current_page?(cash_flows_path))}= link_to t("main_menu.cash_flows"), cash_flows_path
          %li{class: ("active" if current_page?(statistics_path))}= link_to t("main_menu.statistics"), statistics_path
        %ul.nav.navbar-nav.pull-right
          %li= link_to t("parts.auth.sign_out"), destroy_user_session_path
          %li.divider-vertical
          %li= link_to image_tag("flags/#{inverse_locale}.png"), url_for(locale: inverse_locale)
      - else
        %ul.nav.navbar-nav.pull-right
          %li= link_to t("parts.auth.sign_in"), new_user_session_path
          %li= link_to t("parts.auth.sign_up"), new_user_registration_path
          %li.divider-vertical
          %li= link_to image_tag("flags/#{inverse_locale}.png"), url_for(locale: inverse_locale)
