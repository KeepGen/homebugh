- check_list = NewUserCheckList.new(user: current_user, locale: I18n.locale)
- unless check_list.all_hints_done?
  %h3= t("check_list.title")
  %ul.list-unstyled
    - if check_list.account_hint_done?
      = check_li_done do
        = check_icon_done
        = t("check_list.account.done")
    - else
      = check_li_todo do
        = check_icon_todo
        = t("check_list.account.todo")
        = link_to t("parts.accounts.add_account"), new_account_path

    - if check_list.income_category_hint_done?
      = check_li_done do
        = check_icon_done
        = t("check_list.income_category.done")
    - else
      = check_li_todo do
        = check_icon_todo
        = t("check_list.income_category.todo")
        = link_to t("parts.categories.add_category"), new_category_path

    - if check_list.spending_category_hint_done?
      = check_li_done do
        = check_icon_done
        = t("check_list.spending_category.done")
    - else
      = check_li_todo do
        = check_icon_todo
        = t("check_list.spending_category.todo")
        = link_to t("parts.categories.add_category"), new_category_path

    - if check_list.transaction_hint_done?
      = check_li_done do
        = check_icon_done
        = t("check_list.transaction.done")
    - else
      = check_li_todo do
        = check_icon_todo
        = t("check_list.transaction.todo")
        = link_to t("parts.transactions.new_transaction"), new_transaction_path


