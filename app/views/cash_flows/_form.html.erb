<%= form_for(@cash_flow) do |f| %>
  <% if @cash_flow.errors.any? %>
    <div id="error_explanation">
      <h2><%= t( 'activerecord.errors.template.header', :count => @cash_flow.errors.count ) %>:</h2>

      <ul>
      <% @cash_flow.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= f.label :from_account_id %><br />
      <%= f.collection_select :from_account_id, @accounts, :id, :name %>
    </div>
    <div class="field">
      <%= f.label :to_account_id %><br />
      <%= f.collection_select :to_account_id, @accounts, :id, :name %>
    </div>
    <div class="field">
      <%= f.label :amount %><br />
      <%= f.text_field :amount %>
    </div>
    <div class="actions">
      <%= f.submit t( 'parts.cash_flows.submit' ) %>
    </div>
<% end %>
