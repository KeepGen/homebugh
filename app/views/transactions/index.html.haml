%h1= t( 'parts.transactions.transactions_list' )
#child_navigation
  = link_to t( 'parts.transactions.new_transaction' ), new_transaction_path, :class => 'button orange'
- unless @transactions.empty?
  %table.list-table
    %thead
      %tr
        %th.medium= t('common.date')
        %th
          = t('common.category')
          \/#{t('parts.transactions.comment')}
        %th.numbers= t('parts.transactions.sum')
        %th.small= t('common.account')
        %th.small
    %tbody
      - @transactions.each do |transaction|
        %tr
          %td.medium
            = I18n.l(transaction.created_at.to_date, :format => :long)
          %td
            .category= transaction.category ? transaction.category.name : t('parts.transactions.no_category')
            .comment= transaction.comment
          %td.numbers= get_number_to_currency(transaction.category.category_type_id == 1 ? transaction.summ : -transaction.summ)
          %td.medium= transaction.account.name unless transaction.account_id.nil?
          %td.small
            = link_to edit_transaction_path(transaction), :title => t('common.edit') do
              = image_tag 'icons/edit.png', :alt => t('common.edit')
            = link_to transaction, :confirm => t('common.are_you_sure'), :method => :delete, :title => t('common.destroy') do
              = image_tag 'icons/delete.png', :alt => t('common.destroy')
- else
  %p.empty-data= t( 'parts.transactions.you_have_no_transactions' )
